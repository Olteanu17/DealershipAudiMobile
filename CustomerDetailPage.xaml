<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DealershipAudiMobile.CustomerDetailPage"
             Title="Customer Details">
    <StackLayout Padding="10">
        <Label Text="Customer Name:" />
        <Entry Text="{Binding Name}" Placeholder="Enter customer name" />

        <Label Text="Email:" />
        <Entry Text="{Binding Email}" Placeholder="Enter email" Keyboard="Email" />

        <Label Text="Phone:" />
        <Entry Text="{Binding Phone}" Placeholder="Enter phone number" Keyboard="Telephone" />

        <Button Text="Save"
                Clicked="OnSaveButtonClicked"
                HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
