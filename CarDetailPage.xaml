<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DealershipAudiMobile.CarDetailPage"
             Title="Car Details">
    <StackLayout Margin="20">
        <Entry Placeholder="Enter Model" Text="{Binding Model}" />
        <Entry Placeholder="Enter Manufacturer" Text="{Binding Manufacturer}" />
        <Entry Placeholder="Enter Price" Text="{Binding Price}" Keyboard="Numeric" />
        <Entry Placeholder="Enter Year" Text="{Binding Year}" Keyboard="Numeric" />

        <Button Text="Save" Clicked="OnSaveButtonClicked" />
        <Button Text="Delete" Clicked="OnDeleteButtonClicked" />
    </StackLayout>
</ContentPage>
